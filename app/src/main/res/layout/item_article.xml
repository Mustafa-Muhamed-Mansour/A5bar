<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_5sdp">

        <ImageView
            android:id="@+id/img_item_article"
            android:layout_width="@dimen/_160sdp"
            android:layout_height="@dimen/_90sdp" />
        <!--        android:scaleType="centerCrop"-->
        <!--        />-->

        <TextView
            android:id="@+id/txt_source_item_article"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_16sdp"
            android:text="SOURCE"
            android:textColor="@android:color/black"
            android:layout_below="@id/img_item_article" />

        <RelativeLayout
            android:id="@+id/relative_article"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/img_item_article">

            <TextView
                android:id="@+id/txt_title_item_article"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_8sdp"
                android:ellipsize="end"
                android:maxLines="3"
                android:text="TITLE"
                android:textColor="@android:color/black"
                android:textSize="@dimen/_15ssp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_description_item_article"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_8sdp"
                android:layout_marginTop="@dimen/_16sdp"
                android:ellipsize="end"
                android:maxLines="5"
                android:text="DESCRIPTION"
                android:textColor="@android:color/black"
                android:layout_below="@id/txt_title_item_article" />

        </RelativeLayout>

        <TextView
            android:id="@+id/txt_published_at_item_article"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_8sdp"
            android:text="PUBLISHED AT"
            android:textColor="@android:color/black"
            android:layout_below="@id/txt_source_item_article" />


<!--        <com.google.android.material.floatingactionbutton.FloatingActionButton-->
